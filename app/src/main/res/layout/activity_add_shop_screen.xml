<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".AddShopScreen">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">






        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/itemimage"
            android:src="@drawable/upload"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:id="@+id/itemname"
            android:layout_marginLeft="40dp"
            android:hint="Enter Shop Name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/itemdesc"
            android:hint="Enter Shop Description"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/itempnumber"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Contact Number"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/itemcity"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:hint="Enter City"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/items"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Items"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/offers"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Offers"
            />







        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:id="@+id/submititem"
            android:textStyle="bold"
            />
    </LinearLayout>
</ScrollView>